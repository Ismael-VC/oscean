@build-page-incoming ( -- )

	;incoming
	( exists )
	LDAk ?&continue
		POP2 JMP2r
		&continue ( incoming* ~- )
	( html )
	;p-tag write-open
	;&incoming-txt write
	&while ( -- )
		DUP2 write-link #20 write/char
		( move to eol ) &eol ( -- ) INC2 LDAk ?&eol
		INC2 LDAk ?&while
	POP2
	;p-tag

!write-close
	&incoming-txt "<b>Incoming</b>: 20 $1

( tools )

@find-diary ( name* -- diary* )

	STH2
	;diary
	&while ( -- )
		( skip events ) DUP2 ;no-picture log-has-picture ?&skip
			POP2r JMP2r
		&skip ( -- )
		( move to eol ) &eol ( -- ) INC2 LDAk ?&eol
		INC2 LDAk ?&while
	POP2 #0000
	POP2r

JMP2r

@find-parent ( term* -- parent* )

	DUP2 #0002 SUB2 LDA chex ?&not-root
		JMP2r
		&not-root ( -- )
	#00 prev-char INC2
	( stash depth ) LDAk chex #01 SUB STH
	;lexicon SWP2
	&loop ( -- )
		#0001 SUB2 #00 prev-char
		INC2k LDA chex STHkr NEQ ?&continue
			NIP2 POPr INC2 INC2 INC2 JMP2r
			&continue ( -- )
		LTH2k ?&loop
	( pop depth ) POPr
	#0002

JMP2r

@log-has-picture ( log* picture* -- flag )

	SWP2 #0006 ADD2

!sseg

@make-path ( a* b* c* -- path* )

	;buff STH2k sclr
	ROT2 STH2kr scat
	SWP2 STH2kr scat
	STH2kr scat
	STH2kr [ LIT2 20 "_ ] cswp
	STH2r

JMP2r

