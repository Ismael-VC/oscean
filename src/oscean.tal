	LIT "/ write/char
	write
	LIT ">

!write/char

@write ( addr* -- )

	DUP2 scap OVR2 SUB2 .File2/length DEO2
	.File2/write DEO2
	#0001 .File2/length DEO2

JMP2r

&char ( char ~- )

	;&b STAk .File2/write DEO2 POP

JMP2r &b $1

( fancyful things )

@prev-char ( addr* char -- addr* )

	,&t STR
	&while ( -- )
		LDAk [ LIT &t $1 ] EQU ?&end
		LDAk #00 EQU ?&end
		#0001 SUB2 LDAk ?&while
	&end ( -- )

JMP2r

@next-char ( addr* char -- addr* )

	,&t STR
	&while ( -- )
		LDAk [ LIT &t $1 ] EQU ?&end
		LDAk #00 EQU ?&end
		INC2 LDAk ?&while
	&end ( -- )

JMP2r

(
@|stdlib )

@chex ( c -- <val> )

	LIT "0 SUB DUP #09 GTH [ JMP JMP2r ]
	#27 SUB DUP #0f GTH [ JMP JMP2r ]
	POP #ff

JMP2r

@cswp ( str* a b -- )

	,&b STR ,&a STR
	&while ( -- )
		LDAk [ LIT &a $1 ] NEQ ?&continue
			STH2k [ LIT &b $1 ] STH2r STA
			&continue ( -- )
		INC2 LDAk ?&while
	POP2

JMP2r

@scap ( str* -- end* )
	LDAk ?&w
JMP2r
	&w ( -- )
		INC2 LDAk ?&w
JMP2r

@scat ( src* dst* -- )
	scap
@scpy ( src* dst* -- )
	STH2
	&w ( -- )
		LDAk STH2kr STA INC2r INC2 LDAk ?&w
		POP2
	#00 STH2r STA
JMP2r

@scmp ( a* b* -- f )
	STH2
	&l ( -- )
		LDAk LDAkr STHr ANDk #00 EQU ?&e
		NEQk ?&e
		POP2 INC2 INC2r !&l
	&e ( -- )
		NIP2 POP2r EQU
JMP2r

@sseg ( a* b* -- f ) STH2 &l ( -- ) LDAk LDAkr STHr NEQ ?&e INC2k LDA #00 EQU ?&e INC2 INC2r !&l &e ( -- ) LDA LDAr STHr EQU JMP2r
@sclr ( str* -- ) LDAk ?&w POP2 JMP2r &w ( -- ) STH2k #00 STH2r STA INC2 LDAk ?&w POP2 JMP2r

@mclr ( src* len* -- )
	OVR2 ADD2 SWP2
	&l ( -- )
		STH2k #00 STH2r STA
		INC2 GTH2k ?&l
	POP2 POP2
JMP2r

@phex ( hex* -- ) SWP phex/b &b ( b -- ) DUP #04 SFT phex/c &c ( c -- ) #0f AND DUP #09 GTH #27 MUL ADD #30 ADD #18 DEO JMP2r
@pstr ( str* -- ) &w ( -- ) LDAk #18 DEO INC2 LDAk ?&w POP2 JMP2r

@print-warning ( name* msg* -- )

	pstr pstr #0a18 DEO

JMP2r

@print-error ( name* msg* -> )

	SWP2
	pstr
	#2018 DEO
	pstr
	#0a18 DEO
	#010f DEO

BRK

