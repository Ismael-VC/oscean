	&string ( addr* string* -- addr* )
		&while
			SWP2 STH2
			LDAk STH2r ROT
			,&char JSR 
			SWP2 INC2 
			LDAk ,&while JCN
		POP2
	RTN
	&char ( addr* char -- addr* )
		ROT ROT STH2k STA
		STH2r INC2
	RTN
	
RTN

@print-hex ( value* -- )
	
	&short ( value* -- )
		SWP ,&echo JSR 
	&byte ( value -- )
		,&echo JSR
	RTN

	&echo ( value -- )
	STHk #04 SFT ,&parse JSR .Console/write DEO
	STHr #0f AND ,&parse JSR .Console/write DEO
	RTN
	&parse ( value -- char )
		DUP #09 GTH ,&above JCN #30 + RTN &above #09 - #60 + RTN

RTN

