	DUP2 ,slen JSR ++ ,scpy JSR

RTN

@scpy ( src* dst* -- )

	STH2 
	DUP2
	&while
		SWP2k -- STH2kr ++ STH2
		LDAk STH2r STA
		INC2 LDAk ,&while JCN
	SWP2 -- STH2r ++ 
	#00 ROT ROT STA

RTN

@slen ( addr* -- length* )

	1-- DUP2
	&while
		INC2 LDAk ,&while JCN
	SWP2 --
	1--

RTN

@mclr ( addr* length* -- )
	
	OVR2 ++ SWP2
	&loop
		DUP2 #00 ROT ROT STA
		INC2 GTH2k ,&loop JCN
	POP2 POP2

RTN

@mcpy ( a* b* length* -- )
	
	STH2
	,&b STR2 ,&a STR2
	STH2r #0000
	&loop
		STH2k
		,&a LDR2 STH2kr ++ LDA 
		,&b LDR2 STH2r ++ STA
		INC2 GTH2k ,&loop JCN
	POP2 POP2

RTN
	&a $2 &b $2

