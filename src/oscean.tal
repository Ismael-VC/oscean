%+  { ADD } %-   { SUB }              %/   { DIV }  
%<  { LTH } %>   { GTH }  %=  { EQU } %!   { NEQ } 
%++ { ADD2 } %-- { SUB2 }              %// { DIV2 } 
%<< { LTH2 } %>> { GTH2 } %== { EQU2 } %!! { NEQ2 }  

%1-- { #0001 -- }
%2++ { INC2 INC2 }

%DEBUG  { ;print-hex/byte JSR2 #0a .Console/write DEO }
%DEBUG2 { ;print-hex/short JSR2 #0a .Console/write DEO }
%PRINT { ;print-string JSR2 #0a .Console/write DEO }

%RTN { JMP2r }
%HALT { #0101 .System/debug DEO2 }

( Map:
	0x1800 - 0x3000 Lexicon
	0x3000 - 0x8000 Diary
	0x8000 - 0xffff Output )

%LEXICON { #1800 }
%LEXICON-SIZE { #1800 }
%DIARY { #3000 }
%DIARY-SIZE { #5000 }
%INCLUDE-SIZE { #7000 }
%FILE { #8000 }
%FILE-SIZE { #8000 }

%^s { FILE ;scat JSR2 }
%^c { FILE ;ccat JSR2 }
%^space { #20 ^c }
%^< { STH2 LIT '< ^c STH2r ^s LIT '> ^c }
%^> { STH2 LIT '< ^c LIT '/ ^c STH2r ^s LIT '> ^c }
%^<> { STH2k ^< ^s STH2r ^> }

%GET-DEPTH { #0002 -- LDA ;chex JSR2 }

( devices )

|00 @System     [ &vector $2 &wst      $1 &rst    $1 &pad   $4 &r      $2 &g      $2 &b    $2 &debug  $1 &halt $1 ]
|10 @Console    [ &vector $2 &read     $1 &pad    $5 &write $1 &error  $1 ]
|a0 @File       [ &vector $2 &success  $2 &offset-hs $2 &offset-ls $2 &name   $2 &length $2 &load $2 &save   $2 ]
|b0 @DateTime   [ &year   $2 &month    $1 &day    $1 &hour  $1 &minute $1 &second $1 &dotw $1 &doty   $2 &isdst $1 ]

( variables )

|0000 $2 

@term
	&name $20
	&pict $4

( program )

|0100 ( -> )

	;load JSR2
	,focus-page LDR ,build-one JCN
		,build-all JMP
	HALT
	
BRK

@focus-page ( "directory ) $1

@build-one ( -> ) 

	;focus-page ;find-term JSR2 ;build-page JSR2 
	HALT

BRK

@build-all ( -- )
	
	#0000
	LEXICON
	&while
		( move to name ) 2++ 
		( display )
			( print count ) OVR2 ;print-hex/short JSR2 #0d .Console/write DEO
			( incr count ) SWP2 INC2 SWP2
		( build ) DUP2 ;build-page JSR2
		( move to eol ) DUP2 ;slen JSR2 ++ INC2 
		LDAk ,&while JCN
	POP2 POP2
	#0a .Console/write DEO 
	HALT

RTN

@load ( -- )
	
	;lexicon-path ,&lexicon JSR
	RTN
	&lexicon ( path* -- )
		( load lexicon )
		.File/name DEO2
		LEXICON-SIZE  .File/length DEO2
		LEXICON       .File/load DEO2
		( remove linebreaks ) LEXICON #0a #00 ;cswp JSR2 
	RTN
	&diary ( path* -- )
		DIARY DIARY-SIZE ;mclr JSR2
		( load diary )
		.File/name DEO2
		DIARY-SIZE  .File/length DEO2
		DIARY       .File/load DEO2
		( remove linebreaks ) DIARY #0a #00 ;cswp JSR2 
	RTN

RTN

@print-error ( name* msg* -- )
	
	SWP2 
	1--
	&name-loop
		INC2 LDAk .Console/write DEO 
		LDAk ,&name-loop JCN
	POP2
	#20 .Console/write DEO 
	1--
	&msg-loop
		INC2 LDAk .Console/write DEO 
		LDAk ,&msg-loop JCN
	POP2
	#0a .Console/write DEO 

RTN

