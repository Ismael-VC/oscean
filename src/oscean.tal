@check-page ( page* -- )

	( look for redlinks )
	&while
		DUP2 ;href-attr SWP2 ;scmp-seg JSR2 #00 = ,&continue JCN
			( move to href ) #0006 ++ 
			( strip relative ) LDAk [ LIT '. ] = ,&continue JCN
			( strip jumps ) LDAk [ LIT '# ] = ,&continue JCN
			( strip http* ) DUP2 ;http-txt SWP2 ;scmp-seg JSR2 ,&continue JCN
			( filter ) DUP2 
			;&buff #0030 ;mcpy JSR2
			;&buff [ LIT '. ] #00 ;cswp JSR2
			;&buff [ LIT '_ ] #20 ;cswp JSR2
			( find term )
			;&buff ;find-term JSR2 #0000 !! ,&continue JCN
				;&buff ;error-broken-link ;print-error JSR2
			&continue
		INC2 LDAk ,&while JCN
	POP2
RTN
	&buff $30

( tools )

@find-term ( name* -- term* )

	STH2
	LEXICON 
	&while
		( move to name ) 2++ 
		( test ) DUP2 STH2kr ;scmp JSR2 ,&end JCN
		( move to eol ) DUP2 ;slen JSR2 ++ INC2 
		LDAk ,&while JCN
	POP2 #0000
	&end
	POP2r

RTN

@find-diary ( name* -- diary* )

	STH2
	DIARY 
	&while
		( skip events ) DUP2 #0006 ++ ;no-picture SWP2 ;scmp-seg JSR2 ,&skip JCN
		( move to name ) #000a ++
		( test ) DUP2 STH2kr SWP2 ;scmp-seg JSR2 ,&end JCN
		&skip
		( move to eol ) DUP2 ;slen JSR2 ++ INC2 
		LDAk ,&while JCN
	POP2 #0000
	&end
	POP2r

RTN

@find-parent ( term* -- parent* )

	( rewind line ) #00 ;prev-char JSR2 
	( stash depth ) INC2k LDA ;chex JSR2 #01 - STH
	LEXICON SWP2
	&loop
		1-- #00 ;prev-char JSR2 
		INC2k LDA ;chex JSR2 STHkr ! ,&continue JCN
			NIP2 POPr #0003 ++ RTN
			&continue
		LTH2k ,&loop JCN
	( pop depth ) POPr
	#0002

RTN

