	[ LIT 20 ] write/char
	write
	[ LIT "= ] write/char
	[ LIT "" ] write/char
	write
	[ LIT "" ]

!write/char

@write-open ( tag* -- )

	LIT "< write/char
	write
	LIT ">

!write/char

@write-auto ( str* tag* -+ )

	STH2k write-open
	write
	STH2r

@write-close ( tag* -- )

