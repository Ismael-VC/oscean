@|framework )

@<w> ( name* -- )

	LIT "< w-chr
	w-str
	LIT "> !w-chr

( .. )

@</w> ( name* -- )

	LIT "< w-chr
	LIT "/ w-chr
	w-str
	LIT "> !w-chr

( .. )

@<w/> ( name* -- )

	LIT "< w-chr
	w-str
	LIT "/ w-chr
	LIT "> !w-chr

( .. )

@w-img ( src* alt* )

	;&a w-str
	w-str
	;&b w-str
	w-str
	;&c !w-str

( .. )
	&a "<img 20 "alt=" $1
	&b "" 20 "src="../media/diary/ $1
	&c ".jpg"/> $1

@w-link ( str* -- )

	;&a w-str
	DUP2 w-path
	;&b w-str
	w-str
	;&c !w-str

( .. )
	&a "<a 20 "href=' $1
	&b ".html'> $1
	&c "</a> $1

@w-path ( str* -- )

	&w
		LDAk LIT "_ OVR #20 NEQ [ JMP SWP POP ] w-chr
		INC2 LDAk ?&w
	POP2

JMP2r

@w-len ( str* len* -- )

	ADD2k NIP2 SWP2
	&l
		LDAk w-chr
		INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@w-str ( str* -- )

	&w
		LDAk w-chr
		INC2 LDAk ?&w
	POP2

JMP2r

@w-chr ( chr -- )

	;&b STH2k STA
	STH2r .File2/write DEO2

JMP2r
	&b $1

(
@|stdlib )

@cswp ( str* a b -- )

	STH STH
	&while
		LDAk STHkr NEQ ?&continue
			DUP2 OVRr STHr ROT ROT STA
			&continue
		INC2 LDAk ?&while
	POP2 POP2r

JMP2r

@sdec ( str* -- val* )

	LIT2r 0000
	&w
		LIT2r 000a MUL2r
		LITr 00
		LDAk #30 SUB STH ADD2r
		INC2 LDAk ?&w
	POP2
	STH2r

JMP2r

@sseg ( a* b* -- f ) STH2 &l LDAk LDAkr STHr NEQ ?&e INC2k LDA #00 EQU ?&e INC2 INC2r !&l &e LDA LDAr STHr EQU JMP2r
@slen ( str* -- len* ) DUP2 scap SWP2 SUB2 JMP2r
@scpy-line ( src* dst* -- ) STH2 &w LDAk STH2kr STA INC2r INC2 LDAk DUP #1f GTH SWP LIT ". NEQ AND ?&w POP2 #00 STH2r STA JMP2r
@scmp ( a* b* -- f ) STH2 &l LDAk LDAkr STHr ANDk #00 EQU ?&e NEQk ?&e POP2 INC2 INC2r !&l &e NIP2 POP2r EQU JMP2r
@scap ( str* -- end* ) LDAk #00 NEQ [ JMP JMP2r ] &w INC2 LDAk ?&w JMP2r
@print ( hex* -- ) SWP ,&b JSR &b DUP #04 SFT ,&c JSR &c #0f AND DUP #09 GTH #27 MUL ADD #30 ADD #18 DEO JMP2r
@print-str ( str* -- ) &w LDAk #18 DEO INC2 LDAk ?&w POP2 JMP2r

@pdec ( short* -- )

	#00 ,&z STR
	#2710 ,&parse JSR
	#03e8 ,&parse JSR
	#0064 ,&parse JSR
	#000a ,&parse JSR
	NIP
	&emit
		DUP [ LIT &z $1 ] EQU ?&skip
			#ff ,&z STR DUP #30 ADD #18 DEO
			&skip
	POP

JMP2r
	&parse
		DIV2k DUP ,&emit JSR MUL2 SUB2
	JMP2r

