( Oh time thy pyramids

	Notes:
	#f000-#f400 is used to store used diary ids
)

|a0 @File &vector $2 &success $2 &stat $2 &delete $1 &append $1 &name $2 &length $2 &read $2 &write $2
|b0 @File2 &vector $2 &success $2 &stat $2 &delete $1 &append $1 &name $2 &length $2 &read $2 &write $2

|0000

(
@|vectors )

|0100 @on-reset ( -> )

	( clear old copies )
	;sitemap-path .File2/name DEO2
	#01 .File2/delete DEO
	;calendar-path .File2/name DEO2
	#01 .File2/delete DEO
	;journal-path .File2/name DEO2
	#01 .File2/delete DEO

	( setup output )
	#01 .File2/append DEO
	#0001 .File2/length DEO2

	( lexicon )
	;sitemap-path .File2/name DEO2 ;ul-tag <w>
	parse-lexicon
	;sitemap-path .File2/name DEO2 ;ul-tag </w>

	( diary )
	;calendar-path .File2/name DEO2 ;header-txt w-str ;p-tag <w>
	parse-diary-pages
	;calendar-path .File2/name DEO2 ;p-tag </w>

	( print next available id )
	;available-txt print-str
	find-available pdec #0a18 DEO

	( halt. )
	#010f DEO

BRK

(
@|lexicon )

@load-file ( addr* length* path* -- )

	STH2k .File/name DEO2
	STH2k .File/length DEO2
	.File/read DEO2

	( check for size )
	.File/success DEI2 STH2r NEQ2 ?&size-ok
		STH2kr print-str #0a18 DEO
		&size-ok
	POP2r

JMP2r

@parse-lexicon ( -- )

	;lexicon #2000 ;lexicon-path load-file
	( swap ) ;lexicon #0a00 cswp
	;lexicon .File/success DEI2 ADD2k NIP2 SWP2
	&l
		parse-lexicon-line
		INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@parse-lexicon-line ( line* -- next* )

	INC2 INC2

	( do incoming )
	DUP2k #0001 SUB2 LDA LIT "? EQU ?&no-map
		DUP2 parse-links
		&no-map

	( do sitemap )
	;sitemap-path .File2/name DEO2
	;li-tag <w>
	w-link
	;li-tag </w>
	#0a w-chr

	( next line )
	!scap

( .. )

@parse-links ( src* -- )

	DUP2 make-path-htm ;workarea #8000 ROT2 load-file

	,&src STR2
	;workarea .File/success DEI2 ADD2k NIP2 SWP2
	&l
		;href-attr OVR2 sseg #00 EQU ?&no-link
			[ LIT2 &src $2 ] OVR2 #0006 ADD2 parse-link
			&no-link
		INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@parse-link ( src* link* -- )

	( external ) ;http-txt OVR2 sseg ?&end
	( hash ) LDAk LIT "# EQU ?&end
		DUP2 make-path-map .File2/name DEO2
		OVR2 w-str
		#0a w-chr
		&end
	POP2
	POP2

JMP2r

(
@|diary )

@parse-diary-pages ( -- )

	#4000 .File/length DEO2
	;diary-path-pages/end ;diary-path-pages
	&l
		LDA2k ;workarea #4000 ROT2 load-file
		#0000
			( to* from* ) ;workarea STH2k .File/success DEI2 ADD2
			( cap ) STA2k NIP2
			( parse ) STH2r parse-diary-page
		INC2 INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@parse-diary-page ( to* from* -- )

	( swap ) DUP2 #0a00 cswp
	&l
		parse-diary-line
		INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@parse-diary-line ( line* -- next* )

	DUP2 parse-log
	( split )
	DUP2 #0900 cswp
	DUP2 validate-log
	( event )
	DUP2 #0005 ADD2 LDA LIT "+ NEQ ?&no-event
		DUP2 parse-event
		&no-event
	( photo )
	;no-photo OVR2 #0006 ADD2 scmp ?&no-photo
		DUP2 parse-photo
		&no-photo
	( eol )
	scap INC2
	scap INC2
	!scap

( .. )

@parse-log ( event* -- )

	DUP2 #000a ADD2 make-path-tmp .File2/name DEO2
	w-str
	#0a !w-chr

( .. )

@parse-event ( event* -- )

	;calendar-path .File2/name DEO2

	( year )
	LDAk2 ,&last LDR2 EQU2 ?&no-year
		;br-tag <w/>
		LDA2k ,&last STR2
		&no-year

	( date )
	;code-tag <w>
		DUP2 #0005 w-len
	;code-tag </w>
	scap INC2
	( term ) DUP2 w-link
	;spacer w-str
	scap INC2
	( name ) w-str
	;br-tag <w/>
	#0a !w-chr

( .. )
	&last $3

@parse-photo ( photo* -- )

	( limit to 20 entries )
	[ LIT2 &len $2 ] #0020 LTH2 ?&continue
		POP2 JMP2r
		&continue

	;journal-path .File2/name DEO2

	DUP2 #0006 ADD2 ,&pict STR2
	#000a ADD2
		DUP2 ,&term STR2
		scap INC2 ,&title STR2

	;figure-tag <w>
		( src ) [ LIT2 &pict $2 ]
		( alt ) [ LIT2 &title $2 ] w-img
		;figcaption-tag <w>
			[ LIT2 &term $2 ] w-link
				;spacer w-str
				,&title LDR2 w-str
		;figcaption-tag </w>
	;figure-tag </w>
	,&len LDR2 INC2 ,&len STR2
	#0a !w-chr

( .. )

@make-path-tmp ( name* -- path* )

	;&term scpy-line
	;&term #20 LIT "_ cswp
	;&path

JMP2r
	&path "tmp/log- &term $30

@make-path-htm ( name* -- path* )

	DUP2 ;&term scpy-line
	;&term #20 LIT "_ cswp
	slen ;&term ADD2 ;htm-ext SWP2 scpy-line
	;&path

JMP2r
	&path "src/htm/ &term $30

@make-path-map ( name* -- path* )

	;&term scpy-line
	;&term #20 LIT "_ cswp
	;&path

JMP2r
	&path "tmp/map- &term $30

(
@|validate )

@validate-log ( log* -- )

	( validate photo id )
	DUP2 #0006 ADD2 sdec record-log-id
	POP2

JMP2r

@record-log-id ( log* -- )

	ORAk ?&exists
		POP2 JMP2r
		&exists
	#f000 ADD2 LDAk ?&duplicate
	#01 ROT ROT STA

JMP2r
	&duplicate ( id* -- )
		LDA print/b #0a18 DEO
	JMP2r

@find-available ( -- id* )

	( find next diary )
	#f400 #f001
	&loop
		LDAk #00 EQU ?&end
		INC2 GTH2k ?&loop
		&end
	NIP2
	#f000 SUB2

JMP2r

