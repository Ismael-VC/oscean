( Oh time thy pyramids )

|a0 @File &vector $2 &success $2 &stat $2 &delete $1 &append $1 &name $2 &length $2 &read $2 &write $2
|b0 @File2 &vector $2 &success $2 &stat $2 &delete $1 &append $1 &name $2 &length $2 &read $2 &write $2

|0100 ( -> )

	( clear old copies )
	;sitemap-path .File2/name DEO2
	[ LIT2 01 -File2/delete ] DEO
	;calendar-path .File2/name DEO2
	[ LIT2 01 -File2/delete ] DEO
	;journal-path .File2/name DEO2
	[ LIT2 01 -File2/delete ] DEO

	( setup output )
	[ LIT2 01 -File2/append ] DEO
	#0001 .File2/length DEO2

	( lexicon )
	;sitemap-path .File2/name DEO2 ;ul-tag <w>
	parse-lexicon
	;sitemap-path .File2/name DEO2 ;ul-tag </w>

	( diary )
	;calendar-path .File2/name DEO2 ;header-txt w-str ;p-tag <w>
	parse-diary-pages
	;calendar-path .File2/name DEO2 ;p-tag </w>

	( print next available id )
	;available-txt pstr
	find-available pdec #0a18 DEO

	( halt. )
	#800f DEO

BRK

(
@|lexicon )

@load-file ( addr* length* path* -- )

	STH2k .File/name DEO2
	DUP2 .File/length DEO2
	SWP2 .File/read DEO2

	( check for size )
	.File/success DEI2 NEQ2 ?&size-ok
		STH2kr pstr #0a18 DEO
		&size-ok ( -- )
	POP2r

JMP2r

@parse-lexicon ( -- )

	;lexicon #2000 ;lexicon-path load-file
	( swap ) ;lexicon #0a00 cswp
	;lexicon .File/success DEI2 ADD2k NIP2 SWP2
	&l ( -- )
		parse-lexicon-line
		INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@parse-lexicon-line ( line* -- next* )

	INC2 INC2

	( do incoming )
	DUP2k #0001 SUB2 LDA LIT "? EQU ?&no-map
		DUP2 parse-links
		&no-map ( -- )

	( do sitemap )
	;sitemap-path .File2/name DEO2
	;li-tag <w>
	w-link
	;li-tag </w>
	#0a w-chr
	( eol )

!scap

@parse-links ( src* -- )

	DUP2 make-path-htm ;workarea #8000 ROT2 load-file

	,&src STR2
	;workarea .File/success DEI2 ADD2k NIP2 SWP2
	&l ( -- )
		;href-attr OVR2 sseg #00 EQU ?&no-link
			[ LIT2 &src $2 ] OVR2 #0006 ADD2 parse-link
			&no-link ( -- )
		INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@parse-link ( src* link* -- )

	( external ) ;http-txt OVR2 sseg ?&end
	( hash ) LDAk LIT "# EQU ?&end
	( rel ) LDAk LIT ". EQU ?&end

		( find broken links )
		DUP2 ;&buf scpy-line
		;&buf [ LIT2 "_ 20 ] cswp
		;&buf find-term INC2 ORA ?&exists
			;&err pstr ;&buf pstr
			;&in pstr OVR2 pstr #0a18 DEO
			#010f DEO BRK
			&exists

		DUP2 make-path-map .File2/name DEO2
		OVR2 w-str
		#0a w-chr
		&end ( -- )
	POP2
	POP2

JMP2r
&buf $30
&err "-- 20 "Redlink: 20 $1
&in 20 "in 20 $1

@find-term ( link* -- )

	,&t STR2
	;lexicon
	&w
		INC2 INC2
		DUP2 [ LIT2 &t $2 ] scmp ?&end
		scap INC2 LDAk ?&w
	POP2 #ffff
	&end

JMP2r

(
@|diary )

@parse-diary-pages ( -- )

	#4000 .File/length DEO2
	;diary-path-pages/end ;diary-path-pages
	&l ( -- )
		LDA2k ;workarea #4000 ROT2 load-file
		#0000
			( to* from* ) ;workarea STH2k .File/success DEI2 ADD2
			( cap ) STA2k NIP2
			( parse ) STH2r parse-diary-page
		INC2 INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@parse-diary-page ( to* from* -- )

	( swap ) DUP2 #0a00 cswp
	&l ( -- )
		parse-diary-line
		INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@parse-diary-line ( line* -- next* )

	DUP2 parse-log
	( split )
	DUP2 #0900 cswp
	DUP2 set-diary
	( event )
	DUP2 #0005 ADD2 LDA LIT "+ NEQ ?&no-event
		DUP2 parse-event
		&no-event ( -- )
	( photo )
	;no-photo OVR2 #0006 ADD2 scmp ?&no-photo
		DUP2 parse-photo
		&no-photo ( -- )
	( eol )
	scap INC2
	scap INC2

!scap

@parse-log ( event* -- )

	DUP2 #000a ADD2 make-path-tmp .File2/name DEO2
	w-str
	#0a

!w-chr

@parse-event ( event* -- )

	( add to calendar )
	;calendar-path .File2/name DEO2

	( year )
	LDAk2 ,&last LDR2 EQU2 ?&no-year
		;br-tag <w/>
		LDA2k ,&last STR2
		&no-year ( -- )

	( date )
	;code-tag <w>
		DUP2 #0005 w-len
	;code-tag </w>
	#20 w-chr
	scap INC2
	( term ) DUP2 w-link
	;spacer w-str
	scap INC2
	( name ) w-str
	;br-tag <w/>
	#0a

!w-chr
	&last "17 $1

@parse-photo ( photo* -- )

	( limit to 20 entries )
	[ LIT2 &len $2 ] #0020 LTH2 ?&continue
		POP2 JMP2r
		&continue ( photo* ~- )

	;journal-path .File2/name DEO2

	DUP2 #0006 ADD2 ,&pict STR2
	#000a ADD2
		DUP2 ,&term STR2
		scap INC2 ,&title STR2

	;figure-tag <w>
		( src ) [ LIT2 &pict $2 ]
		( alt ) [ LIT2 &title $2 ] <img>
		;figcaption-tag <w>
			[ LIT2 &term $2 ] w-link
				;spacer w-str
				,&title LDR2 w-str
		;figcaption-tag </w>
	;figure-tag </w>
	,&len LDR2 INC2 ,&len STR2
	#0a

!w-chr

@make-path-tmp ( name* -- path* )

	;&term scpy-line
	;&term [ LIT2 20 "_ ] cswp
	;&path

JMP2r
	&path "tmp/log- &term $30

@make-path-htm ( name* -- path* )

	;&term STH2k scpy-line
	STH2kr [ LIT2 20 "_ ] cswp
	;htm-ext STH2r scap scpy-line
	;&path

JMP2r
	&path "src/htm/ &term $30

@make-path-map ( name* -- path* )

	;&term scpy-line
	;&term [ LIT2 20 "_ ] cswp
	;&path

JMP2r
	&path "tmp/map- &term $30

(
@|validate )

@set-diary ( log* -- )

	( validate photo id )
	#0006 ADD2 sdec

	ORAk #00 EQU ?&missing
	DUP2 get-diary ?&duplicate

	#01 OVR #07 AND #40 SFT SFT STH
	#03 SFT2 ;diaries ADD2
	LDAk STHr ORA ROT ROT STA

JMP2r
	&missing ( id* ~- ) POP2 JMP2r

&duplicate ( id* ~- )

	;&warning-txt pstr
	pdec #0a18 DEO

JMP2r

&warning-txt "-- 20 "Duplicate 20 "diary: 20 $1

@get-diary ( id* -- mask )

	#01 OVR #07 AND #40 SFT SFT STH
	#03 SFT2 ;diaries ADD2
	LDA STHr AND

JMP2r

@find-available ( -- id* )

	( find next diary )
	#0001
	&w ( -- )
		DUP2 get-diary #00 EQU ?&end
		INC2 !&w
	&end ( -- )

JMP2r

