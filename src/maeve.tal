	&b ".html'> $1
	&c "</a> $1

@w-path ( str* -- )

	&w ( -- )
		LDAk LIT "_ OVR #20 NEQ [ JMP SWP POP ] w-chr
		INC2 LDAk ?&w
	POP2

JMP2r

@w-len ( str* len* -- )

	ADD2k NIP2 SWP2
	&l ( -- )
		LDAk w-chr
		INC2 GTH2k ?&l
	POP2 POP2

JMP2r

@w-str ( str* -- )

	&w ( -- )
		LDAk w-chr
		INC2 LDAk ?&w
	POP2

JMP2r

@w-chr ( chr -- )

	;&b STAk .File2/write DEO2 POP

JMP2r
	&b $1

(
@|stdlib )

@cswp ( str* a b -- )

	,&b STR ,&a STR
	&w ( -- )
		LDAk [ LIT &a $1 ] NEQ ?&continue
			STH2k [ LIT &b $1 ] STH2r STA
			&continue ( -- )
		INC2 LDAk ?&w
	POP2

JMP2r

@sdec ( str* -- val* )

	LIT2r 0000
	&w ( -- )
		LIT2r 000a MUL2r
		LITr 00
		LDAk #30 SUB STH ADD2r
		INC2 LDAk ?&w
	POP2
	STH2r

JMP2r

@sseg ( a* b* -- f ) STH2 &l ( a* -- f ) LDAk LDAkr STHr NEQ ?&e INC2k LDA #00 EQU ?&e INC2 INC2r !&l &e ( a* ~- f ) LDA LDAr STHr EQU JMP2r
@scpy-line ( src* dst* -- ) STH2 &w ( -- ) LDAk STH2kr STA INC2r INC2 LDAk DUP #1f GTH SWP LIT ". NEQ AND ?&w POP2 #00 STH2r STA JMP2r
@scmp ( a* b* -- f ) STH2 &l ( a -- ) LDAk LDAkr STHr NEQk ?&d DUP EOR EQUk ?&d POP2 INC2 INC2r !&l &d ( a* b* ~- f ) NIP2 POP2r EQU JMP2r

@scap ( str* -- end* )
	LDAk ?&w
JMP2r
	&w ( -- )
		INC2 LDAk ?&w
JMP2r

@phex ( hex* -- ) SWP phex/b &b ( b -- ) DUP #04 SFT phex/c &c ( c -- ) #0f AND DUP #09 GTH #27 MUL ADD #30 ADD #18 DEO JMP2r
@pstr ( str* -- ) &w ( -- ) LDAk #18 DEO INC2 LDAk ?&w POP2 JMP2r

@pdec ( short* -- )

	#2710 LIT2r 00fb
	&w
		DIV2k #000a DIV2k MUL2 SUB2 SWPr
		EQUk OVR STHkr EQU AND ?&skip
			DUP LIT "0 ADD #19 DEO INCr
			&skip
		POP2 #000a DIV2
		SWPr INCr STHkr ?&w
	POP2r POP2 POP2

JMP2r

