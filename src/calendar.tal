@w-link ( str* -- )

	;<ahref=' ;w-str JSR2
	DUP2 ;w-path JSR2
	;.html'> ;w-str JSR2
	;w-str JSR2
	;</a> ;w-str JSR2

JMP2r

@w-str ( str* -- )

	&w
		LDAk ,&b STR
		;&b .File2/write DEO2
		INC2 LDAk ,&w JCN
	POP2

JMP2r
	&b $1

@w-path ( str* -- )

	&w
		LDAk 
		DUP #20 NEQ ,&no-space JCN
			POP LIT "_
			&no-space
			,&b STR
		;&b .File2/write DEO2
		INC2 LDAk ,&w JCN
	POP2

JMP2r
	&b $1

