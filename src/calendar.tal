|b0 @File2 &vector $2 &success $2 &stat $2 &delete $1 &append $1 &name $2 &length $2 &read $2 &write $2

|0000

|0100 ( -> )

	( setup output )
	;output-path .File2/name DEO2
	#0001 .File2/length DEO2
	;header-txt ;w-str JSR2

	( write )
	;<p> ;w-str JSR2
	,parse-pages JSR
	;</p> ;w-str JSR2

	( halt. )
	#010f DEO

BRK

@parse-pages ( -- )

	#4000 .File/length DEO2
	;diary-path-pages/end ;diary-path-pages
	&l
		LDA2k .File/name DEO2
		;workarea .File/read DEO2
		#0000
			( to* from* ) ;workarea STH2k .File/success DEI2 ADD2
			( cap ) STA2k NIP2
			( parse ) STH2r ,parse-diary JSR
		INC2 INC2 GTH2k ,&l JCN
	POP2 POP2

JMP2r

@parse-diary ( to* from* -- )

	( swap ) DUP2 #0a00 ;cswp JSR2
	&l
		,parse-line JSR
		INC2 GTH2k ,&l JCN
	POP2 POP2

JMP2r

@parse-line ( line* -- line* )

	( swap ) DUP2 #0900 ;cswp JSR2

	DUP2 #0005 ADD2 LDA LIT "+ NEQ ,&skip JCN

	( year )
	LDAk2 ,&last LDR2 EQU2 ,&no-year JCN
		;<br/> ;w-str JSR2
		LDA2k ,&last STR2
		&no-year

	DUP2 #00 ROT ROT #0005 ADD2 STA
	( print )
	( date )
	;<code> ;w-str JSR2
	DUP2 ;w-str JSR2
	;</code> ;w-str JSR2
	;scap JSR2 INC2
	;scap JSR2 INC2
	( term ) DUP2 ;w-link JSR2
	;spacer ;w-str JSR2
	;scap JSR2 INC2
	( name ) DUP2 ;w-str JSR2
	;<br/> ;w-str JSR2
	;scap JSR2

JMP2r
	&last $3

&skip ( str* -- str* )

	;scap JSR2 INC2
	;scap JSR2 INC2 
	;scap JSR2

JMP2r

