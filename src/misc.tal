@find-term ( name* -- term* )

	STH2
	LEXICON 
	&while
		( move to name ) #0002 ++ 
		( test ) DUP2 STH2kr ;scmp JSR2 ,&end JCN
		( move to eol ) DUP2 ;slen JSR2 ++ INC2 
		LDAk ,&while JCN
	&end
	POP2r

RTN

@mclr ( addr* length* -- )
	
	OVR2 ADD2 SWP2
	&loop
		DUP2 #00 ROT ROT STA
		INC2 GTH2k ,&loop JCN
	POP2 POP2

RTN

@next-char ( addr* char -- addr* )
	
	STH
	&while
		LDAk STHkr = ,&end JCN
		LDAk #00 = ,&end JCN
		INC2 LDAk ,&while JCN
	&end
		POPr

RTN